<Actions>
	<action name="Action">
        <input deviceType="IDV_KEYBOARD" EventType="EVENT_UP_DOWN"  Code="KEY_F"/>
    </action>
	
	<action name="EnterBarrel">
        <input deviceType="IDV_KEYBOARD" EventType="EVENT_UP_DOWN"  Code="KEY_F"/>
    </action>
	
	<action name="MoveForward">
   	 <input deviceType="IDV_KEYBOARD" EventType="EVENT_DOWN"  Code="KEY_W"/>
    </action>
	
	<action name="MoveBackward">
   	 <input deviceType="IDV_KEYBOARD" EventType="EVENT_DOWN"  Code="KEY_S"/>
    </action>
	
	<action name="MoveLeft">
   	 <input deviceType="IDV_KEYBOARD" EventType="EVENT_DOWN"  Code="KEY_A"/>
    </action>
	
	<action name="MoveRight">
   	 <input deviceType="IDV_KEYBOARD" EventType="EVENT_DOWN"  Code="KEY_D"/>
    </action>
	
	<action name="MoveUp">
   	 <input deviceType="IDV_KEYBOARD" EventType="EVENT_DOWN"  Code="KEY_Q"/>
    </action>
	
	<action name="MoveDown">
   	 <input deviceType="IDV_KEYBOARD" EventType="EVENT_DOWN"  Code="KEY_E"/>
    </action>
	
	<action name="Jump">
   	 <input deviceType="IDV_KEYBOARD" EventType="EVENT_UP_DOWN"  Code="KEY_SPACE"/>
    </action>
	
	<action name="ChangeCamera">
   	 <input deviceType="IDV_KEYBOARD" EventType="EVENT_DOWN_UP"  Code="KEY_U"/>
    </action>
  
    <action name="ShootDown">
		<input deviceType="IDV_MOUSE" EventType="EVENT_UP_DOWN"  Code="MOUSE_BUTTON_LEFT"/>
	</action>
    
	<action name="StealthAttack">
		<input deviceType="IDV_KEYBOARD" EventType="EVENT_UP_DOWN"  Code="KEY_E"/>
	</action>
  
	<!-- Shoots normal and up and down -->
	<action name="ShootDown">
		<input deviceType="IDV_MOUSE" EventType="EVENT_UP_DOWN"  Code="MOUSE_BUTTON_LEFT"/>
	</action>
  
	<action name="ShootUp">
		<input deviceType="IDV_MOUSE" EventType="EVENT_DOWN_UP"  Code="MOUSE_BUTTON_LEFT"/>
	</action>
  
    <action name="ShootChargedDown">
		<input deviceType="IDV_MOUSE" EventType="EVENT_UP_DOWN"  Code="MOUSE_BUTTON_RIGHT"/>
	</action>
  
    <action name="ShootChargedUp">
		<input deviceType="IDV_MOUSE" EventType="EVENT_DOWN_UP"  Code="MOUSE_BUTTON_RIGHT"/>
    </action>
	
	<action name="MoveYaw">
		<input deviceType="IDV_MOUSE" AxisType="AXIS_MOUSE_X"/>
    </action>
	
	<action name="MovePitch">
	<input deviceType="IDV_MOUSE" AxisType="AXIS_MOUSE_Y"/>
    </action>
	
	<action name="Run">
   	 <input deviceType="IDV_KEYBOARD" EventType="EVENT_DOWN"  Code="KEY_LSHIFT"/>
    </action>
	
	<action name="Crouch">
   	 <input deviceType="IDV_KEYBOARD" EventType="EVENT_UP_DOWN"  Code="KEY_C"/>
    </action>
	
</Actions>